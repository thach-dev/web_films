{
  "version": 2,
  "builds": [
    { "src": "api/**/*.js", "use": "@vercel/node" }
  ],
  "routes": [
    {
      "src": "/api/stories",
      "dest": "/api/stories/story.js"
    },
    {
      "src": "/api/films",
      "dest": "/api/films/film.js"
    },
    { 
      "src": "/api/auth/login", 
      "dest": "/api/auth/login.js" 
    },
    {
      "src": "/api/banner",
      "dest": "/api/banner/banner.js"
    },
    {
      "src": "/api/news",
      "dest": "/api/news/news.js"
    }
  ]
}
